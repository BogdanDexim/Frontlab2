$border-color = black
$text-color = darkcyan
$background-color = azure
$gap-size = 1em
$max-width = 1920px

.container
  display grid
  grid-template-columns 50px 1fr 1fr 1fr 1fr 50px
  grid-template-rows 20px 1fr 1fr 0.5fr
  gap $gap-size
  margin-left auto
  margin-right auto
  max-width $max-width

.logo, .logo-secondary
  max-width 200px
  width 100%
  height auto
  display block
  margin 0 auto
  border-radius 4px

figure
  display flex
  align-items center
  justify-content center
  gap $gap-size

.logo-container
  grid-row 2
  grid-column 3 / span 2
  display flex
  justify-content center
  align-items center

.creator-one
  grid-row 3
  grid-column 2 / span 2
  align-self center
  justify-self right

.creator-two
  grid-row 3
  grid-column 4 / span 2
  align-self center
  justify-self left

.item
  font-size 13px
  width 70%
  height 80%

.item > img
  width 180px
  height auto

.mail-line
  grid-row 4
  grid-column 3 / span 2
  align-self flex-start
  padding 10px
  height 40%

input, button
  height 80%

input
  width 50%

button
  width 30%
  &:hover
    cursor pointer

footer
  background-color $background-color
  display flex
  flex-direction column
  align-items center
  gap $gap-size
  margin-left auto
  margin-right auto
  max-width $max-width

a
  padding 10px
  color $text-color

a:link
  text-decoration none

a:hover
  text-decoration underline

hr
  border-top 1px solid $border-color